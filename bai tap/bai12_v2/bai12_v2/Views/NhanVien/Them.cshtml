
@{
    ViewBag.Title = "Them";
}

<h2>THÊM NHÂN VIÊN MỚI</h2>
<table>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)// bat loi
        <tr style="height: 40px">
            <td>Mã nhân viên: </td>
            <td>@Html.TextBox("Manv") <font style="color: red">@ViewData["Loi1"]</font></td>
        </tr>
        <tr style="height: 40px">
            <td>Họ tên: </td>
            <td>@Html.TextBox("Hoten") <font style="color: red">@ViewData["Loi2"]</font></td>
        </tr>
        <tr style="height: 40px">
            <td>Phòng: </td>
            <td>@Html.TextBox("Phong") <font style="color: red">@ViewData["Loi3"]</font></td>
        </tr>
        <tr style="height: 40px">
            <td>Lương: </td>
            <td>@Html.TextBox("Luong") <font style="color: red">@ViewData["Loi4"]</font></td>
        </tr>
        <tr style="height: 40px">
            <td colspan="2" align="center">
                <input type="submit" value="Thêm" /> | 
                @Html.ActionLink("Về danh sách", "Index")
            </td>
        </tr>
    }
</table>