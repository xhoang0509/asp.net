
@{
    ViewBag.Title = "Index";
}

<h3>QUẢN LÝ NHÂN VIÊN</h3>
<table border="1" style="font-size: 14px" width="800">
    <tr>
        <td>Mã NV</td>
        <th>Họ tên</th>
        <th>Tên phòng</th>
        <th>Lương</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Manv</td>
            <td>@item.Hoten</td>
            <td>@item.Phong</td>
            <td>@item.Luong</td>
            <td>
                @Html.ActionLink("Sửa", "Sua", new { id = item.Manv.Trim() }) |
                @Html.ActionLink("Chi tiết", "ChiTiet", new { id = item.Manv.Trim() }) |
                @Html.ActionLink("Xóa", "Xoa", new { id = item.Manv.Trim() })
            </td>
        </tr>
    }
</table>
@Html.ActionLink("Thêm mới", "Them", "Nhanvien")